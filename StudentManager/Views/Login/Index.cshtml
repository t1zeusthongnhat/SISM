@{
    ViewBag.Title = "Login";
} 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="~/css_new/login2php.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="container">
        <div class="image-left">
            <img src="~/images/pngegg.png" alt="">
        </div>
        <div class="main">
            <input type="checkbox" id="chk" aria-hidden="true">

            <div class="login">
                <form asp-action="Index" method="post" class="form">
                    <label class="lb" for="chk" aria-hidden="true">Log in</label>
                    <div class="inputContainer">
                        <i class='bx bxs-user'></i>
                        <input class="input" type="text" name="username" placeholder="Username" required>

                    </div>
                    <div class="inputContainer">
                        <i class='bx bxs-lock-alt'></i>
                        <input class="input" type="password" name="password" placeholder="Password" required>
                    </div>
                    <button type="submit">Log in</button>

                </form>
            </div>

            <div class="register">
                <form class="form">
                    <label class="lb" for="chk" aria-hidden="true">Register</label>
                    <div class="inputContainer">
                        <i class='bx bxs-user'></i>
                        <input class="input" type="text" name="txt" placeholder="Username" required>

                    </div>
                    <div class="inputContainer">
                        <i class='bx bxs-envelope'></i>
                        <input class="input" type="email" name="email" placeholder="Email" required>

                    </div>
                    <div class="inputContainer">
                        <i class='bx bxs-lock-alt'></i>
                        <input class="input" type="password" name="password" placeholder="Password" required>
                    </div>
                    <button>Register</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>