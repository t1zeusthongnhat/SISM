@{
    ViewBag.Title = "Create Student";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@model StudentManager.Models.Student
<section id="sidebar">
    <a asp-controller="Home" asp-action="Index" class="brand">
        <img class="bx bxs-smile png-stu" src="~/images/LogoBTEC-1.png" alt="Alternate Text" />
        <span class="text text-png">Student Management</span>
    </a>
    <ul class="side-menu top">
        <li>
            <a asp-controller="Home" asp-action="Index">
                <i class='bx bxs-dashboard'></i>
                <span class="text">Dashboard</span>
            </a>
        </li>
        <li class="active">
            <a asp-controller="Student" asp-action="Index">
                <i class='bx bxs-user'></i>
                <span class="text">Student Management</span>
            </a>
        </li>
        <li>
            <a asp-controller="Course" asp-action="Index">
                <i class='bx bxs-book'></i>
                <span class="text">Course Management</span>
            </a>
        </li>
        <li>
            <a asp-controller="User" asp-action="Index">
                <i class='bx bxs-user-pin'></i>
                <span class="text">User Management</span>
            </a>
        </li>

    </ul>
    <ul class="side-menu">
        <li>
            <a>
                <i class='bx bxs-cog'></i>
                <span class="text">Settings</span>
            </a>
        </li>
        <li>
            <a class="logout" asp-controller="Login" asp-action="Index">
                <i class='bx bxs-log-out-circle'></i>
                <span class="text">Logout</span>
            </a>
        </li>
    </ul>
</section>
<section id="content">
    <!-- NAVBAR -->
    <nav>
        <i class='bx bx-menu'></i>
        <form action="#">
            <div class="form-input">
                <input type="search" placeholder="Search...">
                <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
            </div>
        </form>
        <input type="checkbox" id="switch-mode" hidden>
        <label for="switch-mode" class="switch-mode"></label>
        <a href="#" class="notification">
            <i class='bx bxs-bell'></i>
            <span class="num">8</span>
        </a>
        <a href="#" class="profile">
            <img src="~/images/—Pngtree—cartoon pig head_4235799.png">
        </a>
    </nav>
    <!-- NAVBAR -->
    <!-- MAIN -->
    <main>
        <div class="head-title">
            <div class="left">
                <h1>Add new</h1>
                <ul class="breadcrumb">
                    <li>
                        <a href="#">Dashboard</a>
                    </li>
                    <li><i class='bx bx-chevron-right'></i></li>
                    <li>
                     <a asp-controller="Student" asp-action="Index"> Student Management </a>
                    </li>
                    <li><i class='bx bx-chevron-right'></i></li>

                    <li>
                        <a class="active" href="#">Add new</a>
                    </li>
                </ul>
            </div>

            <a class="btn btn-success" asp-controller="Student" asp-action="Index">Back</a>

        </div>

        <div class="content">
           

            <form asp-action="CreateStudent" method="post">
                <div class="form-group">
                    <label>Full Name</label>
                    <input asp-for="StudentName" type="text" class="form-control" placeholder="Full Name" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input asp-for="Address" type="text" class="form-control" placeholder="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input asp-for="Phone" type="text" class="form-control" placeholder="Phone number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Gender</label>
                    <select asp-for="Gender" class="form-select" aria-label="Default select example" style="width: 100%; padding: 8px; border: none; border: 1px solid #ced4da; border-radius: 5px;">
                        <option value="">---Choose---</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Birthday</label>
                    <input asp-for="Birthday" type="date" class="form-control" placeholder="dd/MM/yyyy" />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="float: right; padding: 10px; width: 100px; height: 50px">Add</button>
            </form>

           
        </div>
       

    </main>
    <!-- MAIN -->
</section>
