@model StudentManager.Models.Student

@{
    ViewBag.Title = "Edit Student";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section id="sidebar">
    <a asp-controller="Home" asp-action="Index" class="brand">
        <img class="bx bxs-smile png-stu" src="~/images/LogoBTEC-1.png" alt="Alternate Text" />
        <span class="text text-png">Student Management</span>
    </a>
    <ul class="side-menu top">
        <li>
            <a asp-controller="Home" asp-action="Index">
                <i class='bx bxs-dashboard'></i>
                <span class="text">Dashboard</span>
            </a>
        </li>
        <li class="active">
            <a asp-controller="Student" asp-action="Index">
                <i class='bx bxs-user'></i>
                <span class="text">Student Management</span>
            </a>
        </li>
        <li>
            <a asp-controller="Course" asp-action="Index">
                <i class='bx bxs-book'></i>
                <span class="text">Course Management</span>
            </a>
        </li>
        <li>
            <a asp-controller="User" asp-action="Index">
                <i class='bx bxs-user-pin'></i>
                <span class="text">User Management</span>
            </a>
        </li>

    </ul>
    <ul class="side-menu">

        <li>
            <form asp-controller="Login" asp-action="Logout" method="post" style="display:inline;">
                <button type="submit" class="logout" style="background:none; border:none; cursor:pointer; color:red;">
                    <i class='bx bxs-log-out-circle' style="color:red;"></i>
                    <span class="text" style="color:red;">Logout</span>
                </button>
            </form>
        </li>
    </ul>
</section>
<section id="content">
    <nav>
        <i class='bx bx-menu'></i>
        <form action="#">
            <div class="form-input">
                <input type="search" placeholder="Search...">
                <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
            </div>
        </form>
        <input type="checkbox" id="switch-mode" hidden>
        <label for="switch-mode" class="switch-mode"></label>
        <a href="#" class="notification">
            <i class='bx bxs-bell'></i>
            <span class="num">8</span>
        </a>
        <a href="#" class="profile">
            <img src="~/images/—Pngtree—cartoon pig head_4235799.png">
        </a>
    </nav>

    <main>
        <div class="head-title">
            <div class="left">
                <h1>Update Student</h1>
                <ul class="breadcrumb">
                    <li>
                        <a href="#">Dashboard</a>
                    </li>
                    <li><i class='bx bx-chevron-right'></i></li>
                    <li>
                        <a asp-controller="Student" asp-action="Index">Student Management</a>
                    </li>
                    <li><i class='bx bx-chevron-right'></i></li>
                    <li>
                        <a class="active" href="#">Edit</a>
                    </li>
                </ul>
            </div>
            <a class="btn btn-success" asp-controller="Student" asp-action="Index">Back</a>
        </div>

        <div class="content">
            <form asp-action="EditStudent">
                <input type="hidden" asp-for="Id" /> <!-- Ẩn trường ID -->
                <div class="form-group">
                    <label asp-for="StudentName"></label>
                    <input asp-for="StudentName" class="form-control" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="select-gender">
                    <label asp-for="Gender"></label>
                    <select asp-for="Gender" class="form-select" aria-label="Default select example" style="width: 100%; padding: 8px; border: 1px solid #ced4da; border-radius: 5px;">
                        <option selected>---Choose---</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Birthday"></label>
                    <input asp-for="Birthday" class="form-control" type="date" />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
                <div class="btn-add" style="margin-bottom: 50px">
                    <button type="submit" class="btn btn-primary mr-2">Update</button>
                </div>
            </form>
        </div>
    </main>
</section>